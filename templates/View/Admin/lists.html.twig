{% extends 'base.html.twig' %}

{% block container %}
    <div class="text-center mt-5">
        {% if user %}
            {% if user.permission == 1 %}
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Shareable</th>
                    <th scope="col">Owner</th>
                </tr>
                </thead>
                <tbody>
                {% for list in lists  %}
                        <tr>
                            <td>{{ list.id }}</td>
                            <td><a href="/List/Detail/{{ list.id }}">{{ list.title }}</a></td>
                            <td>{{ list.shareable == 1 ? 'True' : 'False' }}</td>
                            {% for u in users %}
                                {% if u.id == list.owner %}
                                    <td><a href="/User/{{ u.username }}">{{ u.username }}</a></td>
                                {% endif %}
                            {% endfor %}
                        </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
                <h1>You have no permission to view this.</h1>
                <p>If you want go back click <a href="/">here</a></p>
            {% endif %}
        {% else %}
            <h1>You are not logged in.</h1>
            <p>Please sign in by clicking <a href="/Login">here</a></p>
        {% endif %}
    </div>
{% endblock %}
